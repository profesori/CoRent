{% extends 'base.html.twig' %}
{% block body %}
  <div class="main">
    <div class="main-inner" style="padding:80px 0px">
      <div class="container">
        <div class="row">
          <div class="col-sm-8 col-lg-9">
            <div class="content">
              <div class="page-title">
                <h1>Krijo anoncen tende</h1>
              </div>

              <div class="background-white p30 mb30">
                {{form_start(form2)}}
                <h3 class="page-title">1. Te dhenat e makines tuaj</h3>
                <div class="row">

                  <div class="col-sm-6">
                    <div class="input-group">
                      <span class="input-group-addon">
                        <i class="fa fa-car"></i>
                      </span>
                      {{form_widget(form2.marque,{'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="input-group">
                      <span class="input-group-addon">
                        <i class="fa fa-clock-o"></i>
                      </span>
                      {{form_widget(form2.anneeProduction,{'attr': {'class': 'form-control','placeholder':'Viti i prodhimit'}}) }}
                    </div>
                  </div>

                  <div class="col-sm-6">
                    <div class="form-group" id="marque_remplace">
                      {{form_widget(form2.modele,{'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="input-group">
                      {{form_widget(form2.places,{'attr': {'class': 'form-control'}}) }}
                    </div>
                  </div>

                  <div class="col-sm-6">
                    <div class="input-group">
                      <span class="input-group-addon">
                        <i class="fa fa-free-code-camp"></i>
                      </span>
                      {{form_widget(form2.carburant,{'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="input-group">
                      <span class="input-group-addon">
                        <i class="fa fa-road"></i>
                      </span>
                      {{form_widget(form2.kmParcourues,{'attr': {'class': 'form-control','placeholder':'KM'}}) }}
                    </div>
                  </div>
                  <div class="col-sm-6">
                    <div class="input-group">
                      {{form_widget(form2.boite,{'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="input-group">
                      {{form_widget(form2.portes,{'attr': {'class': 'form-control'}}) }}
                    </div>
                  </div>

                </div>
                <!--End Row-->
                {{form_end(form2)}}
              </div>

              {{form_start(form)}}
              <div class="background-white p30 mb30">
                <h3 class="page-title">2. Adressa e makines tuaj</h3>
                <div class="row">
                  <div class="col-sm-6">
                    <div class="input-group">
                      {{form_row(form.adresseVoiture.adresse,{'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="input-group">
                      {{form_widget(form.adresseVoiture.ville.ville,{'attr': {'class': 'form-control'}}) }}
                    </div>
                  </div>
                  <div class="col-sm-6">
                    <div class="input-group">
                      {{form_row(form.adresseVoiture.ville.codePostal,{'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="input-group">
                      {{form_widget(form.adresseVoiture.ville.pays.pays,{'attr': {'class': 'form-control'}}) }}
                    </div>
                  </div>

                </div>
              </div>

              <div class="background-white p30 mb30">
                <h3 class="page-title">3. Informacionet e qerase</h3>
                <div class="row">
                  <div class="col-sm-6">
                    <div class="input-group">
                      {{form_row(form.prixJour,{'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="input-group">
                      {{form_row(form.prixKM,{'attr': {'class': 'form-control'}}) }}
                    </div>

                  </div>
                  <div class="col-sm-6">
                    <div class="input-group">
                      {{form_row(form.limiteKM,{'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="input-group">
                      {{form_row(form.dureeLocation,{'attr': {'class': 'form-control'}}) }}
                    </div>
                  </div>
                  <div class="col-sm-12">
                    <div class="input-group">
                      {{form_row(form.exigences,{'attr': {'class': 'form-control'}}) }}
                    </div>
                  </div>

                </div>
              </div>

              <div class="background-white p30 mb30">
                <h3 class="page-title">4. Fotot</h3>
                <div class="row">
                  <div class="col-sm-12">
                    {{ form_widget(form.photos.imageName, {'attr': {'name':'input-file[]','class': 'btn btn-primary pull-center'}}) }}
                  </div>
                </div>
              </div>

              <div class="input-group">
                {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary pull-center'}}) }}
              </div>

              {{form_end(form)}}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
