{% extends 'base.html.twig' %}
{% block body %}

  <div class="main">
    <div class="outer-admin">
      <div class="wrapper-admin">
        <div class="content-admin">
          <div class="content-admin-wrapper">
            <div class="content-admin-main">
              <div class="content-admin-main-inner">
                <div class="container-fluid">
                  <div class="row">
                    <div class="col-sm-12">
                      <div class="container">
                        <div class="row">
                          <!-- /.col-* -->
                          <div class="page-title">
                            <h1>Kerkesat per makinen tuaj</h1>
                          </div>
                          <div class="col-sm-12">
                            {% for demande in demandes %}
                              <div class="background-white p30">
                                <div class="row text-center">
                                  <div class="col-sm-3">
                                    <div class="user user-lg">
                                      <a href="#"><img src="{{asset('img/tmp/agent-2.jpg')}}" alt=""></a>
                                      <p>{{demande.locataire.username}}</p>
                                    </div>
                                  </div>
                                  <div class="col-sm-2">
                                    <p>{{demande.annonce.voiture.marque}}
                                      {{demande.annonce.voiture.modele}}</br>
                                    Nga
                                    <strong>{{demande.dateDebut|date("d/m/Y")}}</strong>
                                    <br>
                                    Deri me
                                    <strong>{{demande.dateFin|date("d/m/Y")}}</strong>
                                    <br>
                                  </div>
                                  <div class="col-sm-4">
                                    <p>
                                      <strong>{{demande.prix}}
                                        euro</strong>
                                    </p>
                                    <p>{{demande.prix - (demande.prix * 0.3)}}
                                      euro per ju</p>
                                  </div>
                                  <div class="col-sm-3"><br>

                                    {% if demande.status == 1 %}
                                      <a class="btn btn-primary" href="{{path('prano_kerkese',{'id': demande.id})}}">Pranoj</a>
                                      <a class="btn btn-primary" href="{{path('refuzo_kerkese',{'id': demande.id})}}">Refuzoj</a>
                                    {% elseif demande.status == 2 %}
                                      <p>Keni pranuar kete kerkese per makinen tuaj me date
                                        {{demande.reservation.dateReservation|date("d/m/Y")|default("")}}.<br>
                                        Klikoni
                                        <a href="">ketu</a>
                                        per te njohur modalitetet e tjera.
                                      </p>
                                    {% else %}
                                      <p>Kerkesa nuk eshte me e disponueshme per kete periudhe.</p>
                                    {% endif %}
                                  </div>
                                </div>
                                <!-- /.cards-system -->
                              </div>
                              <hr>
                            {% else %}
                              <div class=" row text-center">
                                <h2>Nuk keni asnje kerkese</h2>
                              </div>
                            {% endfor %}

                          </div>

                        </div>
                      </div>
                    </div>
                    <!-- /.col-* -->
                  </div>
                </div>
                <!-- /.container-fluid -->
              </div>
              <!-- /.content-admin-main-inner -->
            </div>
            <!-- /.content-admin-main -->
          </div>
          <!-- /.content-admin-wrapper -->
        </div>
        <!-- /.content-admin -->
      </div>
      <!-- /.wrapper-admin -->
    </div>
    <!-- /.outer-admin -->
  </div>
{% endblock %}
{% block style %}
  <style></style>

{% endblock %}
