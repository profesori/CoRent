{% extends 'base.html.twig' %}
{% block body %}

  <div class="main">
    <div class="outer-admin">
      <div class="wrapper-admin">
        <div class="content-admin">
          <div class="content-admin-wrapper">
            <div class="content-admin-main">
              <div class="content-admin-main-inner">
                <div class="container-fluid">
                  <div class="row">
                    <div class="col-sm-12">
                      <div class="row">
                        <div class="profile-nav-pills col-sm-12">
                          <ul class="nav nav-pills nav-justified" id="myTabs">
                            <li class="active" data-toggle="pill" href="#situata">
                              <a href="#situata">Situata</a>
                            </li>
                            <li data-toggle="pill" href="#kerkesat">
                              <a href="#kerkesat">Kerkesat per makinen time</a>
                            </li>
                            <li data-toggle="pill" href="#makinat">
                              <a href="#makinat">Makinat e mia</a>
                            </li>
                            <li data-toggle="pill" href="#qerate">
                              <a href="#qerate">Kerkesat e mia</a>
                            </li>
                            <li data-toggle="pill" href="#profili">
                              <a href="#profili">Informacion profili</a>
                            </li>
                          </ul>
                        </div>
                      </div>
                      <!-- Centered Pills -->
                      <!-- /.row -->
                      <div class="tab-content">

                        <div class="tab-pane active" id="situata" role="tabpanel">
                          {{ render(controller('AlterStudioCoRentBundle:Profile:situata'))}}
                        </div>
                        <div class="tab-pane" id="kerkesat" role="tabpanel">
                          {{ render(controller('AlterStudioCoRentBundle:Profile:kerkesat'))}}
                        </div>
                        <div class="tab-pane" id="makinat" role="tabpanel">
                          {{ render(controller('AlterStudioCoRentBundle:Profile:makinat'))}}
                        </div>
                        <div class="tab-pane" id="qerate" role="tabpanel">
                          {{ render(controller('AlterStudioCoRentBundle:Profile:qerate'))}}
                        </div>
                        <div class="tab-pane" id="profili" role="tabpanel">
                          {{ render(controller('AlterStudioCoRentBundle:Profile:info'))}}
                        </div>
                      </div>
                    </div>
                    <!-- /.col-* -->
                  </div>
                </div>
                <!-- /.container-fluid -->
              </div>
              <!-- /.content-admin-main-inner -->
            </div>
            <!-- /.content-admin-main -->
          </div>
          <!-- /.content-admin-wrapper -->
        </div>
        <!-- /.content-admin -->
      </div>
      <!-- /.wrapper-admin -->
    </div>
    <!-- /.outer-admin -->
  </div>
{% endblock %}
{% block style %}

  <style>
    .kv-avatar .krajee-default.file-preview-frame,
    .kv-avatar .krajee-default.file-preview-frame:hover {
      margin: 0;
      padding: 0;
      border: none;
      box-shadow: none;
      text-align: center;
    }
    .kv-avatar .file-input {
      display: table-cell;
      max-width: 220px;
    }
    .kv-reqd {
      color: red;
      font-family: monospace;
      font-weight: normal;
    }

  </style>
{% endblock %}
{% block javascript %}
  <script>
    var btnCust = '<button type="button" class="btn btn-default" title="Add picture tags" onclick="alert(\'Call your custom code here.\')"><i class="glyphicon glyphicon-tag"></i></button>';
    var imagepreview = "{{asset('img/tmp/agent-2.jpg')}}"
    $("#avatar-2").fileinput({
      overwriteInitial: true,
      maxFileSize: 1500,
      showClose: false,
      showCaption: false,
      showBrowse: false,
      browseOnZoneClick: true,
      removeLabel: '',
      removeIcon: '<i class="glyphicon glyphicon-remove"></i>',
      removeTitle: 'Cancel or reset changes',
      elErrorContainer: '#kv-avatar-errors-2',
      msgErrorClass: 'alert alert-block alert-danger',
      defaultPreviewContent: '<img src="\imagepreview" alt="Your Avatar" style="width:160px"><h6 class="text-muted">Click to select</h6>',
      layoutTemplates: {
        main2: '{preview} ' + btnCust + ' {remove} {browse}'
      },
      allowedFileExtensions: ["jpg", "png", "gif"]
    });
  </script>

{% endblock %}
