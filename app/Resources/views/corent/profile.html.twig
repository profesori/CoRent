                      <div class="tab-content">

                        <div class="tab-pane active" id="situata" role="tabpanel">
                          {{ render(controller('AlterStudioCoRentBundle:Profile:situata'))}}
                        </div>
                        <div class="tab-pane" id="kerkesat" role="tabpanel">
                          {{ render(controller('AlterStudioCoRentBundle:Profile:kerkesat'))}}
                        </div>
                        <div class="tab-pane" id="makinat" role="tabpanel">
                          {{ render(controller('AlterStudioCoRentBundle:Profile:makinat'))}}
                        </div>
                        <div class="tab-pane" id="qerate" role="tabpanel">
                          {{ render(controller('AlterStudioCoRentBundle:Profile:qerate'))}}
                        </div>
                        <div class="tab-pane" id="profili" role="tabpanel"></div>
                      </div>
                      {% block profile_edit %}{% endblock %}
                    </div>
                    <!-- /.col-* -->
                  </div>
                </div>
                <!-- /.container-fluid -->
              </div>
              <!-- /.content-admin-main-inner -->
            </div>
            <!-- /.content-admin-main -->
          </div>
          <!-- /.content-admin-wrapper -->
        </div>
        <!-- /.content-admin -->
      </div>
      <!-- /.wrapper-admin -->
    </div>
    <!-- /.outer-admin -->
  </div>
{% endblock %}
