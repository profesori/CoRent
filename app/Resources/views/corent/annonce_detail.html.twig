{% extends 'base.html.twig' %}
{% block body%}

  <div class="main">
    <div class="main-inner" style="padding:10px 0px">
      <div class="content">

        <div class="container">
          {# On affiche tous les messages flash dont le nom est « info » #}
          {% for message in app.session.flashbag.get('info') %}
            <div class="alert alert-icon alert-warning" role="alert">
              <strong>Info!</strong>
              {{Message}}
            </div>
          {% endfor %}

          <div class="row detail-content">
            <h2>{{annonce.voiture.marque}}
              {{annonce.voiture.modele}}</h2>
            <div class="col-sm-6">
              <div class="detail-gallery">

                <div class="detail-gallery-preview">
                  <div class="card-row-image" data-background-image="">
                    {% if photos[0]is defined %}

                      <a href="{{vich_uploader_asset(photos[0], 'imageFile', 'AppBundle\\Entity\\Photo')}}">
                        <img src="{{vich_uploader_asset(photos[0], 'imageFile', 'AppBundle\\Entity\\Photo')}}">
                      </a>
                    {% else %}
                      <a href="{{asset('img/tmp/gallery-1.jpg')}}">
                        <img src="{{asset('img/tmp/gallery-1.jpg')}}">
                      </a>
                    {% endif %}
                  </div>
                </div>

                <ul class="detail-gallery-index">
                  {% for photo in photos %}
                    <li class="detail-gallery-list-item">
                      <a data-target="{{vich_uploader_asset(photo, 'imageFile', 'AppBundle\\Entity\\Photo')}}">
                        <img src="{{vich_uploader_asset(photo, 'imageFile', 'AppBundle\\Entity\\Photo')}}" alt="...">
                      </a>
                    </li>
                  {% else %}
                    <li class="detail-gallery-list-item">
                      <a data-target="{{asset('img/tmp/gallery-1.jpg')}}">
                        <img src="{{asset('img/tmp/gallery-1.jpg')}}" alt="...">
                      </a>
                    </li>
                  {% endfor %}
                </ul>

              </div>
              <!-- /.detail-gallery -->

            </div>
            <!-- /.col-sm-7 -->

            <div class="col-sm-5">

              <div class="background-white p20">
                <div class="column">
                  <div class="row">
                    <div class="col-sm-2">
                      <div class="testimonial-image">
                        <img src="{{asset('img/tmp/agent-2.jpg')}}" alt="">
                      </div>
                    </div>
                    <div class="col-sm-8 col-sm-offset-1 vcenter">
                      <h3>
                        <a href="#">{{annonce.loueur.username}}</a>
                      </h3>
                    </div>
                  </div>
                  <div class="col-sm-12" style="padding:20px">
                    <div class="detail-overview-rating">
                      <i class="fa fa-star"></i>
                      <strong>4.3 / 5
                      </strong>nga
                      <a href="#reviews">316 njerez</a>
                    </div>
                  </div>
                </div>

                <div class="detail-actions row">
                  <div class="col-sm-4">
                    <div class="btn btn-primary btn-book" data-toggle="modal" data-target="#myModal">
                      <i class="fa fa-sign-in"></i>
                      Rezervo
                    </div>
                  </div>

                  <!--modal for reservations-->
                  <div class="modal fade" tabindex="-1" role="dialog" id="myModal">
                    <div class="modal-dialog" role="document">
                      <div class="modal-content">
                        <div class="modal-header">
                          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                          </button>
                          <h4 class="modal-title">Rezervo tani
                            {{annonce.voiture.marque}}
                            {{annonce.voiture.modele}}
                          </h4>
                        </div>
                        <div class="row">
                          <div class="col-xs-8 col-sm-8 col-sm-offset-2 col-xs-offset-2 " style="display: block">
                            {{ form_start(form, {'method': 'post', 'action': path('demande_annonce')}) }}
                            <div class="form-group">
                              {{ form_label(form.emri) }}
                              {{ form_errors(form.emri) }}
                              {{ form_widget(form.emri, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                              {{ form_label(form.mbiemri) }}
                              {{ form_errors(form.mbiemri) }}
                              {{ form_widget(form.mbiemri, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                              {{ form_label(form.email) }}
                              {{ form_errors(form.email) }}
                              {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                              {{ form_errors(form.telefon) }}
                              {{ form_label(form.telefon) }}
                              {{ form_widget(form.telefon, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                              {{ form_errors(form.dateDebut) }}
                              {{ form_label(form.dateDebut) }}
                              {{ form_widget(form.dateDebut, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                              {{ form_errors(form.dateFin) }}
                              {{ form_label(form.dateFin) }}
                              {{ form_widget(form.dateFin, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            {{ form_end(form) }}
                          </div>
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-primary">Rezervo Tani</button>
                        </div>
                      </div>
                      <!-- /.modal-content -->
                    </div>
                    <!-- /.modal-dialog -->
                  </div>
                  <!-- /.modal -->

                  <!-- /.col-sm-4 -->
                </div>
                <!-- /.detail-actions -->
              </div>
              <!-- /.detail-amenities -->
              <div class="alert alert-icon alert-info" role="alert">
                <strong>Si te rezervoni</strong>
              </br>
              Shifni karakteristikat e makines, nqs jeni dakort klikoni butonin Rezervoj dhe plotesoni fomularin. Per me shume info kliko
              <a href="#">ketu</a>.
            </div>
          </div>
          <!-- /.col-sm-5 -->

          <div class="col-sm-12">
            <h2>Karakteristikat e makines</h2>
            <div class="background-white p20">
              <div class="row">
                <div class="col-sm-6">
                  <table class="table table-hover mb0">
                    <tbody>
                      <tr>
                        <th scope="row">Karburanti</th>
                        <td style="text-align:right">Diesel</td>
                      </tr>
                      <tr>
                        <th scope="row">KM</th>
                        <td style="text-align:right">20.000-30.000</td>
                      </tr>
                      <tr>
                        <th scope="row">Portat</th>
                        <td style="text-align:right">3 dyer</td>
                      </tr>
                    </tbody>
                  </table>
                </div>
                <div class="col-sm-6">
                  <table class="table table-hover mb0">
                    <tbody>
                      <tr>
                        <th scope="row">Karburanti</th>
                        <td style="text-align:right">Diesel</td>
                      </tr>
                      <tr>
                        <th scope="row">KM</th>
                        <td style="text-align:right">20.000-30.000</td>
                      </tr>
                      <tr>
                        <th scope="row">Portat</th>
                        <td style="text-align:right">3 dyer</td>
                      </tr>
                    </tbody>
                  </table>
                </div>
              </div>

              <h3>Opsionet</h3>
              <ul class="detail-amenities">
                <li class="yes">WiFi</li>
                <li class="yes">WiFi</li>
                <li class="yes">WiFi</li>
                <li class="yes">WiFi</li>
                <li class="yes">WiFi</li>
              </ul>
            </div>
            <!--Reviews-->
            <h2 id="reviews">Komentet per kete makine</h2>
            <div class="reviews">
              <div class="review">
                <div class="review-image">
                  <img src="{{asset('img/tmp/agent-1.jpg')}}" alt=" ">
                </div>
                <!-- /.review-image -->

                <div class="review-inner">
                  <div class="review-title">
                    <h2>Nancy Collins</h2>

                    <div class="review-overall-rating">
                      <span class="overall-rating-title">Total Score:</span>
                      <i class="fa fa-star"></i>
                      <i class="fa fa-star"></i>
                      <i class="fa fa-star"></i>
                      <i class="fa fa-star-half-o"></i>
                      <i class="fa fa-star-o"></i>
                    </div>
                    <!-- /.review-rating -->
                  </div>
                  <!-- /.review-title -->

                  <div class="review-content-wrapper">
                    <div class="review-content">
                      <div class="review-pros">
                        <p>Quisque aliquet ornare nunc in viverra. Nullam ornare molestie ligula in luctus. Suspendisse ac cursus elit. In congue mattis felis, non hendrerit orci dictum id.</p>
                      </div>
                      <!-- /.pros -->
                    </div>
                    <!-- /.review-content -->
                    <!-- /.review-rating -->
                  </div>
                  <!-- /.review-content-wrapper -->

                </div>
                <!-- /.review-inner -->
              </div>
              <!-- /.review -->

            </div>
            <!-- /.reviews -->
            <!--End Reviews-->

            <h2>Ler nje koment</h2>
            <form class="background-white p20 add-review" method="post" action="?">
              <div class="row">
                <div class="form-group col-sm-6">
                  <label for="">Name
                    <span class="required">*</span>
                  </label>
                  <input type="text" class="form-control" id="" required>
                </div>
                <!-- /.col-sm-6 -->

                <div class="form-group col-sm-6">
                  <label for="">Email
                    <span class="required">*</span>
                  </label>
                  <input type="email" class="form-control" id="" required>
                </div>
                <!-- /.col-sm-6 -->
              </div>
              <!-- /.row -->

              <div class="row">
                <div class="form-group col-sm-6">
                  <label for="">Pros</label>
                  <textarea class="form-control" rows="5" id=""></textarea>
                </div>
                <!-- /.col-sm-6 -->
                <div class="form-group col-sm-6">
                  <label for="">Cons</label>
                  <textarea class="form-control" rows="5" id=""></textarea>
                </div>
                <!-- /.col-sm-6 -->

                <div class="col-sm-8">
                  <p>Required fields are marked
                    <span class="required">*</span>
                  </p>
                </div>
                <!-- /.col-sm-8 -->
                <div class="col-sm-4">
                  <button class="btn btn-primary btn-block" type="submit">
                    <i class="fa fa-star"></i>Submit Review</button>
                </div>
                <!-- /.col-sm-4 -->
              </div>
              <!-- /.row -->
            </form>
          </div>
          <!-- /.col-* -->
        </div>
        <!-- /.row -->

      </div>
      <!-- /.container -->

    </div>
    <!-- /.content -->
  </div>
  <!-- /.main-inner -->
</div>
<!-- /.main -->

{% endblock %}
